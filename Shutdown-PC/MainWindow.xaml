<Window
    x:Class="Shutdown_PC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:clock="clr-namespace:Shutdown_PC.Controls.Clock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shutdown_PC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Shutdown-PC"
    mc:Ignorable="d">
    <Window.Resources>
        <FontFamily x:Key="LCD">pack://application:,,,/Shutdown-PC;component/Resources/Fonts/LCDMonoWinTT/#LCDMono2 Ultra</FontFamily>
        <!--<FontFamily x:Key="LCD">Resources/Fonts/Lcd Lcd Mono.zip#LCDMonoWinTT</FontFamily>-->
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="Vykonat akci" />
                <RadioButton Content="v určitý čas" />
                <RadioButton Content="po uplynulé době" />
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Vykonaná akci počítače" />
                <RadioButton Content="vypnout" />
                <RadioButton Content="restartovat" />
                <RadioButton Content="odhlásit uživatele" />
                <RadioButton Content="režim spánku" />
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Aktuální čas" />
            <clock:ClockView />
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock Text="Vypnout za" />
            <clock:ClockView />
        </StackPanel>
        <StackPanel Grid.Row="3">
            <TextBlock Text="Vypnout v" />
            <clock:ClockView />
        </StackPanel>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="5"
                Content="Vypnout" />
            <Button
                Grid.Column="1"
                Margin="5"
                Content="Restartovat" />
            <Button
                Grid.Column="2"
                Margin="5"
                Content="Odhlásit" />
        </Grid>

    </Grid>
</Window>
