<Window
    x:Class="Shutdown_PC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:clock="clr-namespace:Shutdown_PC.Controls.Clock"
    xmlns:control="clr-namespace:Shutdown_PC.Controls"
    xmlns:convert="clr-namespace:Shutdown_PC.Helpers.Convertores"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:Shutdown_PC.Models.Enums"
    xmlns:local="clr-namespace:Shutdown_PC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    Title="Shutdown-PC"
    Width="400"
    Height="420"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Window.Resources>
        <FontFamily x:Key="LCD">pack://application:,,,/Shutdown-PC;component/Resources/Fonts/LCDMonoWinTT/#LCDMono2 Ultra</FontFamily>
        <convert:TypeModificationEnumToBooleanConverter x:Key="EnumToBooleanCon" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Nastavení">
                <MenuItem.Icon>
                    <Image
                        Width="12"
                        Height="12"
                        Source="{svgc:SvgImage Source=/Resources/Icons/SVG/setting.svg}" />
                </MenuItem.Icon>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <control:ActionsControl Grid.ColumnSpan="2" />
            <control:ComputerActionsControl Grid.Column="2" />
        </Grid>

        <StackPanel Grid.Row="2">
            <TextBlock Margin="5" Text="Aktuální čas" />
            <clock:ClockView />
        </StackPanel>
        <StackPanel Grid.Row="3">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding TypeModification}" Value="{x:Static enum:eTypeModification.InTime}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock Margin="5" Text="Vypnout za" />
            <clock:ClockView />
        </StackPanel>
        <StackPanel Grid.Row="4">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding TypeModification}" Value="{x:Static enum:eTypeModification.InTime}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>

                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </StackPanel.Style>
            <TextBlock Margin="5" Text="Vypnout v" />
            <clock:ClockView />
        </StackPanel>
        <control:ButtongControl Grid.Row="5" />
        <TextBlock
            Grid.Row="6"
            VerticalAlignment="Center"
            Text="{Binding Message}" />
    </Grid>
</Window>
