<Window
    x:Class="ShutdownPC.Windows.SettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShutdownPC.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Setting"
    Width="300"
    Height="150"
    Background="#fff"
    Style="{StaticResource CustWindow}"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Border
            Grid.Row="1"
            Margin="5"
            BorderBrush="Gray"
            BorderThickness="2">
            <StackPanel>
                <TextBlock Margin="5" Text="Nastavení" />
                <CheckBox
                    Margin="5"
                    Content="Zobrazit v posledních 30s výstrahu."
                    IsChecked="True" />
                <CheckBox Margin="5" Content="Zobrazit čas do konce." />
                <StackPanel />
            </StackPanel>
        </Border>
    </Grid>
</Window>