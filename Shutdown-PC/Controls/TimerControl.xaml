<UserControl
    x:Class="Shutdown_PC.Controls.TimerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shutdown_PC.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <FontFamily x:Key="LCD">pack://application:,,,/Shutdown-PC;component/Resources/Fonts/LCDMonoWinTT/#LCDMono2 Ultra</FontFamily>
    </UserControl.Resources>
    <Label
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Content="00:00:00"
        FontFamily="{StaticResource LCD}"
        FontSize="60"
        Foreground="#1C274C" />
</UserControl>
