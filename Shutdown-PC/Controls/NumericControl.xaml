<UserControl
    x:Class="Shutdown_PC.Controls.NumericControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shutdown_PC.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <FontFamily x:Key="LCD">pack://application:,,,/Shutdown-PC;component/Resources/Fonts/LCDMonoWinTT/#LCDMono2 Ultra</FontFamily>
    </UserControl.Resources>
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{StaticResource LCD}"
                FontSize="60"
                Foreground="#1C274C"
                Content="00" />
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button
                    Width="35"
                    Height="35"
                    Margin="0,5,0,5"
                    Content="+"
                    FontFamily="{StaticResource LCD}"
                    FontSize="30"
                    Foreground="#1C274C" />
                <Button
                    Width="35"
                    Height="35"
                      Margin="5,5,0,5"
                    Content="-"
                    FontFamily="{StaticResource LCD}"
                    FontSize="30"
                    Foreground="#1C274C" />
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
