<UserControl
    x:Class="ShutdownPC.Controls.SetTimerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShutdownPC.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="SetTimeUC"
    MinWidth="320"
    mc:Ignorable="d">
    <UserControl.Resources>
        <FontFamily x:Key="LCD">pack://application:,,,/ShutdownPC;component/Resources/Fonts/LCDMonoWinTT/#LCDMono2 Ultra</FontFamily>

        <Style x:Key="appLabel" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="60" />
            <Setter Property="Foreground" Value="#1C274C" />
            <Setter Property="FontFamily" Value="{StaticResource LCD}" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label
            x:Name="lblDate"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="00.00.0000"
            FontFamily="{StaticResource LCD}"
            FontSize="20"
            Foreground="#1C274C" />
        <Grid  Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
            <Label
                    x:Name="lblNegativTime"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    Content="-"
                    Style="{StaticResource appLabel}"
                    Visibility="Hidden" />
            <local:NumericControl
                    x:Name="HoursUC"
                    Grid.Column="1"
                    MaxTimeValue="99" />
            <Label
                    Grid.Column="2"
                    VerticalAlignment="Top"
                    Content=":"
                    Style="{StaticResource appLabel}" />
            <local:NumericControl x:Name="MinutesUC" Grid.Column="3" />
            <Label
                    Grid.Column="4"
                    VerticalAlignment="Top"
                    Content=":"
                    Style="{StaticResource appLabel}" />
            <local:NumericControl x:Name="SecondsUC" Grid.Column="5" />
        </Grid>
    </Grid>
</UserControl>