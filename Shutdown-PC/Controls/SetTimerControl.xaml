<UserControl
    x:Class="Shutdown_PC.Controls.SetTimerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shutdown_PC.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="SetTimeUC"
    MinWidth="320"
    mc:Ignorable="d">
    <UserControl.Resources>
        <FontFamily x:Key="LCD">pack://application:,,,/Shutdown-PC;component/Resources/Fonts/LCDMonoWinTT/#LCDMono2 Ultra</FontFamily>

        <Style x:Key="appLabel" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="60" />
            <Setter Property="Foreground" Value="#1C274C" />
            <Setter Property="FontFamily" Value="{StaticResource LCD}" />
        </Style>
    </UserControl.Resources>
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal">
        <local:NumericControl MaxTimeValue="99" TimeValue="{Binding Path=HoursValue, Mode=TwoWay, FallbackValue=0, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />
        <Label
            VerticalAlignment="Top"
            Content=":"
            Style="{StaticResource appLabel}" />
        <local:NumericControl PreviousValue="{Binding Path=HoursValue, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" TimeValue="{Binding Path=MinutesValue, Mode=TwoWay, FallbackValue=0, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />
        <Label
            VerticalAlignment="Top"
            Content=":"
            Style="{StaticResource appLabel}" />
        <local:NumericControl PreviousValue="{Binding Path=MinutesValue, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" TimeValue="{Binding Path=SecondsValue, Mode=TwoWay, FallbackValue=0, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />
    </StackPanel>
</UserControl>
